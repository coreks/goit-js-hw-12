<div class='card'>
  <div class='card-body'>
    <div class='card-title'>
      <img class='card-image' src='{{flag}}' alt='{{name}}' />
      <h2 class='card-name'>{{name}}</h2>
    </div>
    <p class='card-text'><b>Capital:</b>{{capital}}</p>
    <p class='card-text'><b>Population:</b>{{population}}</p>
    <p class='card-text'>
      <ul class='card-text card-languages-list'>
        <b>Languages:</b>
        {{#each languages}}
          <li class='card-text card-languages-item'>
            {{name}}
          </li>
        {{/each}}
      </ul>
    </p>
  </div>
</div>